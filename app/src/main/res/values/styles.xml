        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIconTint">@color/chip_text_color</item>
        <item name="chipIconTint">@color/chip_text_color</item>
        <item name="chipCornerRadius">8dp</item>
        <item name="chipStrokeWidth">0.5dp</item>
        <item name="chipStrokeColor">@color/chip_stroke_color</item>
    </style>

    <style name="ShapeAppearanceOverlay.MathSolar.Image.Article.Item" parent="">
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/_8sdp</item>
        <item name="cornerSizeTopRight">@dimen/_8sdp</item>
        <item name="cornerSizeBottomLeft">@dimen/_8sdp</item>
        <item name="cornerSizeBottomRight">@dimen/_8sdp</item>

    </style>

    <style name="Widget.MathSolar.LabelNew.Article.Item" parent="">
        <item name="shapeAppearance">@style/ShapeAppearanceOverlay.MathSolar.LabelNew.Article.Item</item>
        <item name="android:backgroundTint">?attr/colorSecondaryVariant</item>
    </style>

    <style name="ShapeAppearanceOverlay.MathSolar.LabelNew.Article.Item" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/_8sdp</item>
        <item name="cornerSizeTopRight">@dimen/_8sdp</item>
        <item name="cornerSizeBottomLeft">@dimen/_8sdp</item>
        <item name="cornerSizeBottomRight">@dimen/zero</item>
    </style>

</resources>