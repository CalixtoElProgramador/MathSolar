<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MathSolar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_700</item>
        <item name="colorPrimaryVariant">@color/blue_900</item>
        <item name="colorOnPrimary">@color/blue_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_200</item>
        <item name="colorSecondaryVariant">@color/orange_700</item>
        <item name="colorOnSecondary">@color/gold_dark</item>
        <!-- Background & Surface. -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/gray_extra_dark</item>
        <item name="colorSurface">@color/blue_gray_light</item>
        <item name="colorOnSurface">@color/gray_extra_dark</item>
        <!-- Error. -->
        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/red_extra_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?android:colorBackground</item>
        <!-- Customize your theme here. -->
        <item name="colorOnSurfaceDisabled">@color/gray_light</item>
        <item name="customChipStrokeColor">@color/gray_light</item>
    </style>
</resources>