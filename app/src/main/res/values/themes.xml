<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Final, top-level theme-->
    <style name="Theme.MathSolar.DayNight" parent="Theme.MathSolar"/>

    <style name="Theme.MathSolar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_700</item>
        <item name="colorPrimaryVariant">@color/blue_900</item>
        <item name="colorOnPrimary">@color/blue_100</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_300</item>
        <item name="colorSecondaryVariant">@color/orange_900</item>
        <item name="colorOnSecondary">@color/gold_dark</item>
        <!-- Background & Surface. -->
        <item name="android:colorBackground">@color/blue_050</item>
        <item name="colorOnBackground">@color/black_87</item>
        <item name="background">?android:colorBackground</item>
        <item name="colorSurface">@color/blue_500_11_light</item>
        <item name="colorOnSurface">@color/black_87</item>
        <!-- Error. -->
        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/red_extra_light</item>
        <!-- Text Primary, Text Secondary & Text Tertiary -->
        <item name="android:textColorPrimary">@color/black_87</item>
        <item name="android:textColorSecondary">@color/black_74</item>
        <item name="android:textColorTertiary">@color/black_61</item>
        <item name="textColorPrimary">?android:textColorPrimary</item>
        <item name="textColorSecondary">?android:textColorSecondary</item>
        <item name="textColorTertiary">?android:textColorTertiary</item>

        <item name="customAppBarBackgroundColor">?attr/colorSecondary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/customAppBarBackgroundColor</item>
        <item name="android:navigationBarColor">@color/nav_bar</item>

        <!-- Customize your theme here. -->

        <item name="colorOnSurfaceDisabled">@color/black_35</item>

        <item name="articlesChipBackgroundColorChecked">@color/orange_050</item>
        <item name="articlesChipTextColorChecked">?attr/colorSecondaryVariant</item>
        <item name="articlesChipStrokeColorChecked">@color/orange_050</item>

        <item name="articlesChipBackgroundColorDisChecked">?customAppBarBackgroundColor</item>
        <item name="articlesChipTextColorDisChecked">?colorOnSecondary</item>
        <item name="articlesChipStrokeColorDisChecked">?colorOnSecondary</item>

        <item name="textAppearanceHeadline1">@style/TextAppearance.MathSolar.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.MathSolar.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.MathSolar.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.MathSolar.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.MathSolar.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.MathSolar.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.MathSolar.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.MathSolar.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.MathSolar.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.MathSolar.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.MathSolar.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.MathSolar.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.MathSolar.Overline</item>

        <item name="emphasisHighAlpha">0.87</item>
        <item name="emphasisMediumAlpha">0.60</item>
        <item name="emphasisDisabledAlpha">0.38</item>

        <!--System/Platform attributes-->
        <item name="android:windowBackground">?android:colorBackground</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:windowActivityTransitions">true</item>

    </style>
</resources>