<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <!--Final, top-level theme-->
        <style name="Theme.MathSolar.DayNight" parent="Theme.MathSolar.Dark"/>

    <style name="Theme.MathSolar.Dark" parent="Theme.MathSolar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_300</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/blue_900</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_200</item>
        <item name="colorSecondaryVariant">@color/orange_200</item>
        <item name="colorOnSecondary">@color/gold_dark</item>
        <!-- Background & Surface. -->
        <item name="android:colorBackground">@color/blue_neutral_dark</item>
        <item name="colorOnBackground">@color/blue_500_11_light</item>
        <item name="background">?android:colorBackground</item>
        <item name="colorSurface">@color/blue_500_11_dark</item>
        <item name="colorOnSurface">@color/blue_500_11_light</item>
        <!-- Error. -->
        <item name="colorError">@color/red_light</item>
        <item name="colorOnError">@color/red_dark</item>
        <!-- Text Primary, Text Secondary & Text Tertiary -->
        <item name="android:textColorPrimary">@color/white_87</item>
        <item name="android:textColorSecondary">@color/white_74</item>
        <item name="android:textColorTertiary">@color/white_61</item>
        <item name="textColorPrimary">?android:textColorPrimary</item>
        <item name="textColorSecondary">?android:textColorSecondary</item>
        <item name="textColorTertiary">?android:textColorTertiary</item>

        <item name="customAppBarBackgroundColor">@color/blue_neutral_dark</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/customAppBarBackgroundColor</item>
        <item name="elevationOverlayEnabled">true</item>

        <!-- Customize your theme here. -->
        <item name="colorOnSurfaceDisabled">@color/white_35</item>

        <item name="articlesChipBackgroundColorChecked">?attr/colorPrimaryVariant</item>
        <item name="articlesChipTextColorChecked">@color/blue_100</item>
        <item name="articlesChipStrokeColorChecked">?attr/colorPrimaryVariant</item>

        <item name="articlesChipBackgroundColorDisChecked">?attr/colorSurface</item>
        <item name="articlesChipTextColorDisChecked">?attr/colorOnSurface</item>
        <item name="articlesChipStrokeColorDisChecked">?attr/colorOnSurface</item>

        <!--System/Platform attributes-->
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>

    </style>
</resources>