<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:autoTransition="animateToEnd"
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="500">
    </Transition>

    <ConstraintSet android:id="@+id/start">

        <Constraint
            android:id="@+id/image_articleMedia"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180sdp"
            android:alpha="0.0"
            motion:layout_constraintBottom_toTopOf="parent"/>

        <Constraint
            android:id="@+id/articleSource"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:alpha="0.0"
            motion:layout_constraintTop_toBottomOf="@id/image_articleMedia" />

        <Constraint
            android:id="@+id/articleTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:alpha="0.0"
            motion:layout_constraintTop_toBottomOf="@id/articleSource" />

        <Constraint
            android:id="@+id/articleSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:alpha="0.0"
            motion:layout_constraintTop_toBottomOf="@id/articleTitle" />

        <Constraint
            android:id="@+id/articlePublishDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:alpha="0.0"
            motion:layout_constraintTop_toBottomOf="@id/articleSummary" />

        <Constraint
            android:id="@+id/button_openInBrowser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:alpha="0.0"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/articlePublishDate" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint
            android:id="@+id/image_articleMedia"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180sdp"
            android:alpha="1.0"
            motion:layout_constraintTop_toBottomOf="@+id/topAppBar_article_details" />

        <Constraint
            android:id="@+id/articleSource"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:alpha="1.0"
            motion:layout_constraintTop_toBottomOf="@id/image_articleMedia" />

        <Constraint
            android:id="@+id/articleTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:alpha="1.0"
            motion:layout_constraintTop_toBottomOf="@id/articleSource"
            motion:layout_goneMarginTop="@dimen/_8sdp" />

        <Constraint
            android:id="@+id/articleSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:alpha="1.0"
            motion:layout_constraintTop_toBottomOf="@id/articleTitle" />

        <Constraint
            android:id="@+id/articlePublishDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:alpha="1.0"
            motion:layout_constraintTop_toBottomOf="@id/articleSummary" />

        <Constraint
            android:id="@+id/button_openInBrowser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:alpha="1.0"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/articlePublishDate" />

    </ConstraintSet>

</MotionScene>